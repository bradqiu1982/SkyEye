
@{
    ViewBag.Title = "TrainingNewImgs";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script type="text/javascript" src="~/Scripts/ImgTraining.js"></script>

<script type="text/javascript">
    $(function () {
        IMGTRAINING.NEWIMGINIT();
    })
</script>


<div class="row form-group">
    <div class="col-xs-4"></div>
    <div class="col-xs-4"><h1>Training Images</h1></div>
    <div class="col-xs-4"></div>
</div>

<div class="row form-group">
    <div class="col-xs-1"></div>
    <div class="col-xs-2"><input class="form-control" type="text" value="Image Folder" readonly></div>
    <div class="col-xs-7"><input class="form-control" type="text" id="imgfolder" name="imgfolder"></div>
    <div class="col-xs-1"><button class="btn btn-success" id="btn-newgo" name="btn-newgo">New Img</button></div>
    <div class="col-xs-1"></div>
</div>

<div class="row form-group">
    <div class="col-xs-1"></div>
    <div class="col-xs-2"><input class="form-control" type="text" value="Capture Rev" readonly></div>
    <div class="col-xs-3"><input class="form-control" type="text" id="caprev" name="caprev"></div>
    <div class="col-xs-1"><button class="btn btn-success" id="btn-existgo" name="btn-existgo">Exist Img</button></div>
    <div class="col-xs-5"></div>
</div>

<hr>

<div class="row form-group">
    <table class="table table-hover  table-condensed table-striped" id="imgtable" style="margin-top:1%">
        <caption class="tb-caption">Training Images</caption>
        <thead id="imghead"></thead>
        <tbody id="imgcontent"></tbody>
    </table>
</div>

